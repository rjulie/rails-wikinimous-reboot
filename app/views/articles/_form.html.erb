<div class="container mt-4">
  <%= form_with model: @article do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <%= f.submit class: 'btn btn-primary mt-3' %>
  <% end %>
</div>


